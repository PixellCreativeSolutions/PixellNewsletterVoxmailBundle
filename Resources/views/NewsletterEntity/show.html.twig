{% extends 'PixellPageBundle::bundle_base_bk.html.twig' %}

{% block body %}
    
        <div class="row">
            <h1 class="page-header">Visualizza dettagli</h1>
        
            <div class="panel panel-default">
                <div class="panel-heading">
                                        <a class="btn btn-default" href="{{ path('newsletterentity') }}"><i class="fa fa-chevron-left"></i>&nbsp; {{ 'torna alla lista'|trans|title }}</a>
    <a class="btn btn-info" href="{{ path('newsletterentity_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i>&nbsp; {{ 'modifica'|trans|title }}</a>
    <div class="pull-right">{{ form(delete_form) }}</div>
                </div>
                
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer horizontalTable">
                            <tbody>
                                <tr>
                                    <th scope="row">{{ 'id'|trans|capitalize }}</th>                                    
                                                                            <td>{{ entity.id }}</td>
                                    
                                </tr>
                                <tr>
                                    <th scope="row">{{ 'created'|trans|capitalize }}</th>                                    <td>{{ entity.created|date('d F Y - H:i') }}<br><small>da <i>{{ entity.createdBy }}</i></small></td>
                                </tr>
                                <tr>
                                    <th scope="row">{{ 'updated'|trans|capitalize }}</th>                                    <td>{{ entity.updated|date('d F Y - H:i') }}<br><small>da <i>{{ entity.updatedBy }}</i></small></td>
                                </tr>
                                <tr>
                                    <th scope="row">{{ 'name'|trans|capitalize }}</th>                                    
                                                                            <td>{{ entity.name }}</td>
                                    
                                </tr>
                                <tr>
                                    <th scope="row">{{ 'surname'|trans|capitalize }}</th>                                    
                                                                            <td>{{ entity.surname }}</td>
                                    
                                </tr>
                                <tr>
                                    <th scope="row">{{ 'email'|trans|capitalize }}</th>                                    
                                                                            <td>{{ entity.email }}</td>
                                    
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="panel-footer">
                    <a class="btn btn-default" href="{{ path('newsletterentity') }}"><i class="fa fa-chevron-left"></i>&nbsp; {{ 'torna alla lista'|trans|title }}</a>
    <a class="btn btn-info" href="{{ path('newsletterentity_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil-square-o"></i>&nbsp; {{ 'modifica'|trans|title }}</a>
    <div class="pull-right">{{ form(delete_form) }}</div>
                </div>
            </div>
        </div>
    
    {% endblock %}