{% form_theme form 'PixellHubNewsletterBundle:CustomLayout:form_no_div.html.twig' %}

<div class="newsletter-cont">
    <div class="row nom">
        {{ form_start(form) }}
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="row">
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_widget(form.surname) }}
                    </div>
                    <div class="form-group col-lg-4 col-md-4 col-sm-12 col-xs-12">
                        {{ form_widget(form.email) }}
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">    
                <div class="row">    
                    <div class="checkbox col-lg-9 col-md-9 col-sm-12 col-xs-12 privacy">
                        <label><input type="checkbox">{{ 'Ho preso visione e acconsento al trattamento dei miei dati personali (Legge 196/03)'|trans }}. <a href="">{{ 'Visualizza Informativa'|trans }}</a></label>
                    </div>
                    <div class="checkbox col-lg-3 col-md-3 col-sm-12 col-xs-12">
                        <button type="submit" class="btn btn-primary">{{ 'Iscriviti'|trans }}</button>
                    </div>    
                </div> 
            </div>       
        {{ form_end(form) }}
    </div>
</div>

{%- for flashMessage in app.session.flashbag.get('notice') %}
   <div class="alert alert-success">
       {{ flashMessage }}
   </div>
{%- endfor %}

{%- for flashMessage in app.session.flashbag.get('alert') %}
   <div class="alert alert-danger">
       {{ flashMessage }}
   </div>
{%- endfor %}